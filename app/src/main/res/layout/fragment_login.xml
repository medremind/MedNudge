<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.mednudge.Login"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="UserName"
        android:elevation="15dp"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/users"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:elevation="15dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="10dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/pass"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="25dp"
        android:background="@color/colorbutton"
        android:text="Login As Doctor"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textStyle="bold"
        android:onClick="patientLogin"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorbutton"
        android:inputType="textEmailAddress"
        android:text="Login As Patient"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/button2"
        android:elevation="25dp"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:text="First Time User? SignUp here!" />

</RelativeLayout>