<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.project.mednudge.DoctorProfile"
    android:orientation="vertical"
    android:background="@drawable/gradient">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="55dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="12dp"

            android:id="@+id/view2"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="63dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/camera"></ImageView>
        </android.support.v7.widget.CardView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:stretchColumns="0,1">
            <TableRow
                android:layout_marginTop="20dp">
                <TextView
                    android:textColor="#ffff"
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="15sp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Aman"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/specializtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialization"
                    android:textSize="15sp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/user_specializtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="ENT"/>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">

                <TextView android:textColor="#fff"
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:textSize="15sp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="aman07@gmil.com"/>
            </TableRow>
            <TableRow android:layout_marginTop="10dp">


                <TextView
                    android:textColor="#fff"
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No."
                    android:textSize="15sp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/user_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="9582521394"/>
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="15sp"
                    android:gravity="left"/>

            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorbutton"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="View Patients"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    </RelativeLayout>